<?xml version="1.0" encoding="UTF-8" ?>
<Interface Ambience="160 160 160" Scripts="Interface/States/AtGUIEditor.lua" AllowDebug="false">
	<Load>Essentials</Load>

	<Button Anchor="CENTER" Offset="0 25" Name="ReloadUIButton" Texture="ButtonSmall">
		<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Reload" ShadowOffset="1" />
	</Button>
	
	<Bindings>
		<Bind Name="DeleteFocusObjectBind" Key="76" />
		<Bind Name="StopApplicationBind" Key="61" Modifier="1003" />
	</Bindings>

	<Slider Anchor="TOPRIGHT" MaximumValue="600" Type="Drag" Orientation="VERTICAL" Texture="SliderDragVertical">
		<Image Anchor="CENTER" Texture="SliderDragCursorVertical" />
	</Slider>
	
	<Slider Anchor="BOTTOMLEFT" MaximumValue="800" Type="Drag" Orientation="HORIZONTAL" Texture="SliderDrag">
		<Image Anchor="MIDDLE" Texture="SliderDragCursor" />
	</Slider>
	
	<Frame Name="EditorFrame" Anchor="MIDDLECENTER" Width="800" Height="600" Texture="MenuFrame">
	</Frame>
	
	<Dialog Offset="0 50" Width="100" Texture="Dialog">
		<List Anchor="CENTER" Offset="0 10" Margin="0 5">
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Bind" />
			</Button>
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Button" />
			</Button>
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Dialog" />
			</Button>
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Frame" />
			</Button>
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="List" />
			</Button>
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Message" />
			</Button>
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Paragraph" />
			</Button>
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Slider" />
			</Button>
			<Button Anchor="CENTER" Texture="ButtonSmall">
				<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Status Bar" />
			</Button>
		</List>
	</Dialog>
	
	<Dialog Name="DebugFocusDialog" Anchor="RIGHT" Offset="0 50" Width="210" Height="260" Texture="Dialog" Padding="10" Shown="false">
		<List Height="20" Orientation="HORIZONTAL" Margin="3 0">
			<Message Name="FocusIndex" Anchor="MIDDLE" Font="ArialButton" Size="12" Text="(None)" ShadowOffset="1" Interactive="true" />
			<Message Anchor="MIDDLE" Font="Arial" Size="12" Text="::" ShadowOffset="1" />
			<Message Name="FocusName" Anchor="MIDDLE" Font="ArialButton" Size="12" Text="(None)" ShadowOffset="1" Interactive="true" />
		</List>
		
		<List Offset="0 15" Margin="0 4" Orientation="VERTICAL">
			<List Height="30" Orientation="HORIZONTAL">
				<List Orientation="HORIZONTAL">
					<!-- Class -->
					<List Orientation="HORIZONTAL">
						<Frame Width="60" Height="15">
							<Message Anchor="MIDDLERIGHT" Font="Arial" Size="10" Text="Class:" ShadowOffset="1" />
						</Frame>
						<iFrame Width="118" Height="15" ShareInput="true" ClipContents="true" Padding="5 0">
							<Message Name="FocusClass" Anchor="MIDDLE" Font="Arial" Size="10" Text="(None)" ShadowOffset="1" />
						</iFrame>
					</List>
					
					<!-- Parent -->
					<List Orientation="HORIZONTAL">
						<Frame Width="60" Height="15">
							<Message Anchor="MIDDLERIGHT" Font="Arial" Size="10" Text="Parent:" ShadowOffset="1" />
						</Frame>
						<iFrame Width="118" Height="15" Texture="ListItem" ShareInput="true" ClipContents="true" Padding="5 0">
							<Message Name="FocusParent" Anchor="MIDDLE" Font="ArialButton" Size="10" Text="(None)" ShadowOffset="1" />
						</iFrame>
					</List>
				</List>
			</List>

			<List Height="45" Orientation="HORIZONTAL">
				<!-- Anchor -->
				<List Orientation="HORIZONTAL">
					<Frame Width="60" Height="15">
						<Message Anchor="MIDDLERIGHT" Font="Arial" Size="10" Text="Anchor:" ShadowOffset="1" />
					</Frame>
					<iFrame Width="50" Height="15" Texture="ListItem" ShareInput="true" ClipContents="true" Padding="5 0">
						<Message Name="FocusAnchorX" Anchor="MIDDLE" Font="ArialButton" Size="10" Text="0" ShadowOffset="1" />
					</iFrame>
					<iFrame Width="50" Height="15" Texture="ListItem" ShareInput="true" ClipContents="true" Padding="5 0">
						<Message Name="FocusAnchorY" Anchor="MIDDLE" Font="ArialButton" Size="10" Text="0" ShadowOffset="1" />
					</iFrame>
				</List>
				
				<!-- Position -->
				<List Orientation="HORIZONTAL">
					<Frame Width="60" Height="15">
						<Message Anchor="MIDDLERIGHT" Font="Arial" Size="10" Text="Position:" ShadowOffset="1" />
					</Frame>
					<iFrame Width="50" Height="15" Texture="ListItem" ShareInput="true" ClipContents="true" Padding="5 0">
						<Message Name="FocusPositionX" Anchor="MIDDLE" Font="ArialButton" Size="10" Text="0" ShadowOffset="1" />
					</iFrame>
					<iFrame Width="50" Height="15" Texture="ListItem" ShareInput="true" ClipContents="true" Padding="5 0">
						<Message Name="FocusPositionY" Anchor="MIDDLE" Font="ArialButton" Size="10" Text="0" ShadowOffset="1" />
					</iFrame>
				</List>
				
				<!-- Size -->
				<List Orientation="HORIZONTAL">
					<Frame Width="60" Height="15">
						<Message Anchor="MIDDLERIGHT" Font="Arial" Size="10" Text="Size:" ShadowOffset="1" />
					</Frame>
					<iFrame Width="50" Height="15" Texture="ListItem" ShareInput="true" ClipContents="true" Padding="5 0">
						<Message Name="FocusWidth" Anchor="MIDDLE" Font="ArialButton" Size="10" Text="0" ShadowOffset="1" />
					</iFrame>
					<iFrame Width="50" Height="15" Texture="ListItem" ShareInput="true" ClipContents="true" Padding="5 0">
						<Message Name="FocusHeight" Anchor="MIDDLE" Font="ArialButton" Size="10" Text="0" ShadowOffset="1" />
					</iFrame>
				</List>
			</List>
		
			<!-- Interactive -->
			<List Height="120" Orientation="HORIZONTAL" >
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Shown:" ShadowOffset="1" />
					<Checkbox Name="FocusShown" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Disabled:" ShadowOffset="1" />
					<Checkbox Name="FocusDisabled" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Interactive:" ShadowOffset="1" />
					<Checkbox Name="FocusInteractive" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Allow Input:" ShadowOffset="1" />
					<Checkbox Name="FocusAllowOtherInput" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Movable:" ShadowOffset="1" />
					<Checkbox Name="FocusMovable" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Resizable:" ShadowOffset="1" />
					<Checkbox Name="FocusResizable" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Container:" ShadowOffset="1" />
					<Checkbox Name="FocusContainer" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Clip Contents:" ShadowOffset="1" />
					<Checkbox Name="FocusClipsContents" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Share Input:" ShadowOffset="1" />
					<Checkbox Name="FocusSharesInput" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
				<Frame Width="90" Height="15" Padding="5 0">
					<Message Anchor="MIDDLERIGHT" Offset="-20 0" Font="Arial" Size="10" Text="Copy Input:" ShadowOffset="1" />
					<Checkbox Name="FocusCopiesInput" Anchor="MIDDLERIGHT" Width="14" Height="14" Texture="Checkbox" />
				</Frame>
			</List>
		</List>

		<Button Name="FocusDelete" Anchor="0.25 1" Offset="0 -10" Texture="ButtonSmall">
			<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Delete" ShadowOffset="1" />
		</Button>
		
		<Button Name="FocusDeselect" Anchor="0.75 1" Offset="0 -10" Texture="ButtonSmall">
			<Message Anchor="MIDDLECENTER" Font="ArialButton" Size="12" Text="Deselect" ShadowOffset="1" />
		</Button>
	</Dialog>
</Interface>